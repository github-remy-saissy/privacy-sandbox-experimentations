server {
    listen              443 ssl;
    server_name         publisher.localhost;

    ssl_certificate     /usr/local/etc/ssl/privacy-sandbox/publisher.localhost.pem;
    ssl_certificate_key /usr/local/etc/ssl/privacy-sandbox/publisher.localhost-key.pem;

    access_log          /usr/local/var/log/nginx/publisher.access.log;
    error_log           /usr/local/var/log/nginx/publisher.error.log;

    location / {
      proxy_set_header        Host $host;
      proxy_set_header        X-Real-IP $remote_addr;
      proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header        X-Forwarded-Proto $scheme;

      proxy_pass          http://127.0.0.1:3006;
      proxy_read_timeout  90;
    }
}
